<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/app/css/bootstrap.min.css') }}">

    <title>Teste</title>
    {% block css %}
    {% endblock %}
</head>
<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Fábio Neves</h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" href="{{ path('index') }}">Lista de Endereços</a>
        <a class="p-2 text-dark" href="{{ path('contatos_new') }}">Cadastrar Contato</a>
    </nav>
    {% if app.user.id is defined %}
        <a class="btn btn-outline-warning" href="{{ path('fos_user_security_logout') }}">Logout</a>
    {% else %}
        <a class="btn btn-outline-success" href="{{ path('fos_user_security_login') }}">Login</a>
    {% endif %}
</div>
{% block body %}
{% endblock %}

<!-- Optional JavaScript -->
<script src="{{ asset('bundles/app/js/jquery-3.4.1.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/app/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/app/js/jquery.mask.js') }}" type="text/javascript"></script>
<script>
    $( document ).ready(function() {
        $('.phone_us').mask('(000) 0000-0000');
    });
</script>
{% block js %}
{% endblock %}
</body>
</html>