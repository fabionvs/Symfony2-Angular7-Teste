{% extends 'AppBundle::Layout.html.twig' %}

{% block body %}
    <h1>Contatos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contato in contatos %}
            <tr>
                <td><a href="{{ path('contatos_show', { 'id': contato.id }) }}">{{ contato.id }}</a></td>
                <td>{{ contato.nome }}</td>
                <td>{{ contato.email }}</td>
                <td>{{ contato.telefone }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('contatos_show', { 'id': contato.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('contatos_edit', { 'id': contato.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contatos_new') }}">Create a new contato</a>
        </li>
    </ul>
{% endblock %}
